<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:gravity="center_horizontal"
        android:onClick="onButtonClick"
        android:id="@+id/fragmentActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Fragment Activity" />

    <Button
        android:gravity="center_horizontal"
        android:onClick="onButtonClick"
        android:id="@+id/fragmentCommunicationActivityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment communication Activity" />

    <Button
        android:gravity="center_horizontal"
        android:onClick="onButtonClick"
        android:id="@+id/modularUiFragmentActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modular UI Activity" />

    <Button
        android:gravity="center_horizontal"
        android:onClick="onButtonClick"
        android:id="@+id/dialogueFragmentActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dialogue Activity" />

</LinearLayout>